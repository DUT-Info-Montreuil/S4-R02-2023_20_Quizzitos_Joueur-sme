package fr.iut.montreuil.S4_R04_02._Quizzitos_joueur_sme;

import junit.framework.Test;
import junit.framework.TestCase;
import junit.framework.TestSuite;

/**
 * Unit test for simple App.
 */
public class ServiceJoueurTest extends TestCase {

    public void testServiceJoueurDoublonTest() {
        IserviceJoueur serviceJoueur = new ServiceJoueurSimpleMockOk();

        JoueurDTO joueur1 = serviceJoueur.ajouterJoueur("John Doe", "john123", 1990, LanguesEnum.ENGLISH, new String[]{"football", "movies"});

        JoueurDTO joueur2 = serviceJoueur.ajouterJoueur("John Doe", "john123", 1990, LanguesEnum.ENGLISH, new String[]{"football", "movies"});

        assertNull(joueur2);
    }

    public void testServiceJoueurAjoutTest() {
        IserviceJoueur serviceJoueur = new ServiceJoueurSimpleMockOk();

        JoueurDTO joueur = serviceJoueur.ajouterJoueur("John Doe", "john123", 1990, LanguesEnum.ENGLISH, new String[]{"football", "movies"});

        assertNotNull(joueur);
    }

    public void testServiceJoueurDateFormatTest() {
        IserviceJoueur serviceJoueur = new ServiceJoueurSimpleMockOk();

        JoueurDTO joueur = serviceJoueur.ajouterJoueur("John Doe", "john123", 30000, LanguesEnum.ENGLISH, new String[]{"football", "movies"});

        assertNull(joueur);
    }
}
